---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/sections/Hero.astro";
import Brands from "../components/sections/Brands.astro";
import Services from "../components/sections/Services.astro";
import FAQ from "../components/sections/FAQ.astro";
import Features from "../components/sections/Features.astro";
import CTA from "../components/sections/CTA.astro";
import Solutions from "../components/sections/Solutions.astro";

---

<Layout title="Apren a conduir a LLeida">
  <main class="flex flex-col overflow-hidden relative">
    
    <div class="relative md:block">
      <img 
        src="/agency-template/images/carreterav2.svg"
        alt="Imagen decorativa"
        class="absolute w-full h-auto object-cover"
      />
  
    <Hero className="py-10 md:py-16 relative z-10" />
    <Solutions className="pt-10 md:pt-16 relative z-10" />
    <Services className="py-10 md:py-16 relative z-10" />
    <Features className="py-10 md:py-16 relative z-10" />
    <FAQ className="py-10 md:py-16 relative z-10" />
    <CTA className="py-10 md:py-16 relative z-10" />
  </main>
</Layout>
